<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0B275"
    android:hapticFeedbackEnabled="true"
    tools:context=".Claims">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#BC8C39"
        android:gravity="center"
        android:padding="16dp"
        android:text="Vehicle Claim"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title">

        <Button
            android:id="@+id/btn_all_plans"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E7B7A0"
            android:text="All Plans"
            android:textSize="20sp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btn_third_party"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E7B7A0"
            android:text="Third Party"
            android:textSize="20sp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btn_own_damage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E7B7A0"
            android:text="Own Damage"
            android:textSize="20sp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btn_trending_plans"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E7B7A0"
            android:text="Trending Plans"
            android:textSize="20sp"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="134dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#EB9A73"
        android:minHeight="60dp"
        android:padding="16dp"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
